{
    "name": "Sticky Notes App with React",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Allows user to create sticky notes for a certain webpage.",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./main.js"],
        "css": ["/main.css"]
      }
    ],
    "browser_action": {
      "default_popup": "./popup.html"
    },
    "permissions": ["storage"]
  }